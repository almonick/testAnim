<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anim Circle"
                    android:onClick="animShape"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="reverse Cricle"
                    android:onClick="reverse"/>

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anim Line"
                    android:onClick="animLine"/>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="reverse line"
                    android:onClick="reverseLine"
                    />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="reset"
                    android:onClick="reset"/>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="btn6"/>

            </LinearLayout>



        </HorizontalScrollView>

        <ImageView
            android:id="@+id/line_placeholder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/shape_dotted_green_line"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="#5500aa"/>


        <ImageView
            android:id="@+id/circle_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:background="#ff3399"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/circle_blue"
            android:scaleType="fitStart"
            android:background="#aaccdd"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@drawable/circle_blue"
            android:scaleType="fitEnd"
            android:background="#8833bb"/>


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:src="@drawable/circle_blue"
            android:scaleType="fitStart"
            android:background="#44aabb"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:scaleType="fitEnd"
            android:layout_gravity="right"
            android:background="#bbbb"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:scaleType="fitEnd"
            android:layout_gravity="left"
            android:background="#8822bb"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:scaleType="fitStart"
            android:layout_gravity="right"
            android:background="#22aa88"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:scaleType="fitStart"
            android:layout_gravity="left"
            android:background="#dd8844"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:scaleType="fitStart"
            android:layout_gravity="left"
            android:background="#dd8844"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/id_pigeon"
            android:scaleType="fitStart"
            android:layout_gravity="left"
            android:background="#bbffcc"/>
    </LinearLayout>
</ScrollView>